extends ../layout/login-layout 
block content 
    .button-box-bottom
        a#btn-back.toggle-btn(href="/login", onclick='openLogin()')
            i.fas.fa-chevron-circle-left
            | Back
    h1.title Quên mật khẩu
    form#forgotPassword.form(method="POST")
        -var invalidEmail = errorMessages && errorMessages['email'] ? 'invalid':''
        -var email = email
        .input-group(class=invalidEmail)
            label(for='email')
                span.message #{errorMessages ? errorMessages['email'] : 'Email'}
            input#emailLogin.input-field(type='text', value=email ,name='email', placeholder='Eg: minhchiu@gmail.com')
        button.submit-btn Send
